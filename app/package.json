{
    "main": "main.js",
    "name": "poddycast",
    "description": "A Podcast app made with Electron because I love Podcasts.",
    "repository": {
        "type": "git",
        "url": "https://github.com/MrChuckomo/poddycast.git"
    },
    "license": "GPL-3.0",
    "version": "0.9.0",
    "scripts": {
        "package:all": "electron-packager ./ Poddycast --out=./builds --overwrite --platform=all --arch=all --icon=img/poddycast-app_icon",
        "package:linux": "electron-packager ./ Poddycast --out=./builds --overwrite --platform=linux --icon=img/poddycast-app_icon",
        "package:linux32": "electron-packager ./ Poddycast --out=./builds --overwrite --platform=linux --arch=ia32 --icon=img/poddycast-app_icon",
        "package:linuxArm": "electron-packager ./ Poddycast --out=./builds --overwrite --platform=linux --arch=armv7l --icon=img/poddycast-app_icon",
        "package:linuxArm64": "electron-packager ./ Poddycast --out=./builds --overwrite --platform=linux --arch=arm64 --icon=img/poddycast-app_icon",
        "package:linuxMips64": "electron-packager ./ Poddycast --out=./builds --overwrite --platform=linux --arch=mips64el --icon=img/poddycast-app_icon",
        "package:macappstore": "electron-packager ./ Poddycast --out=./builds --overwrite --platform=mas --icon=img/poddycast-app_icon",
        "package:osx": "electron-packager ./ Poddycast --out=./builds --overwrite --platform=darwin --icon=img/poddycast-app_icon",
        "package:win": "electron-packager ./ Poddycast --out=./builds --overwrite --platform=win32 --arch=x64 --icon=img/poddycast-app_icon",
        "package:win32": "electron-packager ./ Poddycast --out=./builds --overwrite --platform=win32 --arch=ia32 --icon=img/poddycast-app_icon",
        "package:winArm64": "electron-packager ./ Poddycast --out=./builds --overwrite --platform=win32 --arch=arm64 --icon=img/poddycast-app_icon",
        "start": "electron .",
        "lint": "eslint \"*/**.js\""
    },
    "dependencies": {
        "axios": "0.21.2",
        "bootstrap": "5.2.0-beta1",
        "bootstrap-icons": "1.8.3",
        "electron": "18.3.7",
        "fast-xml-parser": "4.0.2"
    },
    "devDependencies": {
        "electron-packager": "^14.2.1",
        "electron-rebuild": "2.3.4",
        "eslint": "8.10.0"
    }
}
